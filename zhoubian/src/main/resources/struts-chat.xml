<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="simple" extends="struts-default">
		<action name="getOnlineUsers" class="tmessageAction" method="getOnlineUsers">
			<result name="success">common/json.jsp</result>
		</action>
	</package>
	<package name="json" extends="json-default">
		<action name="findChatHistory" class="tmessageAction" method="findChatHistory">
			<result type="json">
				<param name="root">page</param>
				<param name="includeProperties">root.*,success,totalProperty</param>
			</result>
		</action>
		<action name="addUser" class="tmessageAction" method="addUser">
			<result type="json">
				<param name="includeProperties">success</param>
			</result>
		</action>
	</package>
</struts>